#include<stdio.h>

int main(void){

	float radius = 0;
	printf("Area of circle calculation\n");
	fflush(stdout);
	printf("Enter radius : ");
	fflush(stdout);
	scanf("%f",&radius);
	printf("Area of circle : %d\n",(3.1415 * radius * radius));
	fflush(stdout);

	float base , height;
	printf("Calculating triangle area ");
	fflush(stdout);
	printf("Enter base and height: ");
	fflush(stdout);
	scanf("%f,%f",&base, &height);
	return 0;
}
